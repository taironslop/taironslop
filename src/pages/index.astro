---
import Layout from '../layouts/Layout.astro';
---

<Layout title="taironslop">
  <nav>
    <a href="/" class="nav-brand">taironslop</a>
    <div class="nav-links">
      <a href="/">home</a>
      <a href="/post">post</a>
    </div>
  </nav>

  <main>
    <header>
      <img
        src="https://unavatar.io/twitter/taironslop"
        alt="tairon"
        class="profile-img"
      />
    </header>

    <section class="section">
      <h2>whoami</h2>
      <p>
        hi. i'm tairon, a computer science student passionate about mobile
        development and generative ai.
        <br /><br />
        currently building a language learning app powered by ai-generated
        stories with cursor.
      </p>
    </section>

    <section class="section links">
      <a href="https://x.com/taironslop">x dot com</a>
    </section>
  </main>
</Layout>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    margin-bottom: 2rem;
  }

  .nav-brand {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--accent);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--text);
    opacity: 0.8;
  }

  .nav-links a:hover {
    opacity: 1;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    text-transform: lowercase;
    color: var(--accent);
  }

  .section {
    margin-top: 3rem;
  }

  p {
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .profile-img {
    width: 180px;
    height: 180px;
    border-radius: 50%;
    margin: 0 auto;
    display: block;
    object-fit: cover;
  }

  .links {
    margin-top: 2rem;
  }

  .links a {
    text-decoration: underline;
  }
</style>
